{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es2019"],
    "types": ["jest"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "index.ts",
    "credentials/**/*",
    "nodes/**/*",
    "core/**/*",
    "services/**/*",
    "types/**/*",
    "components/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "test/components/UIComponents.test.ts",
    "test/components/ResourceSelector.test.ts"
  ]
}
