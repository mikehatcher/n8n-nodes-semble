# ===================================================================
# GLOBAL CONFIGURATION
# ===================================================================

# --- SSH Key Configuration ---
SSH_KEY_PATH=~/.ssh/id_rsa

# --- Google Cloud Platform Configuration ---
GOOGLE_CLIENT_ID=your-client-id-here
GOOGLE_CLIENT_SECRET=your-client-secret-here

# --- Zoho CRM API Configuration ---
ZOHO_CLIENT_ID=your-client-id-here
ZOHO_CLIENT_SECRET=your-client-secret-here
ZOHO_TOKEN_URL=your-zoho-token-url-here
ZOHO_OAUTH_REDIRECT_URL=your-callback-url-here
ZOHO_AUTHORISATION_URL=your-zoho-auth-url-here
ZOHO_REFRESH_TOKEN=your-refresh-token-here
ZOHO_API_BASE=https://www.zohoapis.eu/crm/v6

# --- Semble API Configuration ---
SEMBLE_API_URL=https://open.semble.io/graphql
SEMBLE_AUTH_TYPE=x-token
SEMBLE_TOKEN=your-token-here
SEMBLE_TEST_PATIENT_ID=test-patient-id

# --- Github Configuration ---
GITHUB_USER=your_github_username
GITHUB_TOKEN=your_github_token

# --- Local WordPress Environment ---
LOCAL_WP_ROOT=/path/to/localwp/site/root
LOCAL_LIVERELOAD_PROTOCOL=http
LOCAL_LIVERELOAD_HOST=your-local-domain.local
LOCAL_LIVERELOAD_PORT=35729
LOCAL_PROXY_TARGET=http://your-local-domain.local

# --- WordPress API Configuration ---
WP_APP_USERNAME=your_wp_username
WP_APP_PASSWORD=your_wp_app_password

# ===================================================================
# N8N PROJECT CONFIGURATION
# ===================================================================

# --- N8N Production Configuration ---
N8N_PROD_HOST=your-production-server.com
N8N_PROD_USER=root
N8N_PROD_PWD=your-password
N8N_PROD_API_KEY=your-api-key
N8N_PROD_API_ENDPOINT=https://your-n8n-domain.com/api/v1/
N8N_PROD_VERSION=latest

# --- N8N Local Configuration ---
N8N_LOCAL_HOST=http://localhost:5678
N8N_LOCAL_USER=your-email@example.com
N8N_LOCAL_PWD=your-password
N8N_LOCAL_API_KEY=your-api-key
N8N_LOCAL_API_ENDPOINT=http://localhost:5678/api/v1/
N8N_LOCAL_VERSION=latest
N8N_LOCAL_ADMIN_EMAIL=your-email@example.com
N8N_LOCAL_ADMIN_PASSWORD=your-password
N8N_LOCAL_ADMIN_FIRST_NAME=your-first-name
N8N_LOCAL_ADMIN_LAST_NAME=your-last-name
